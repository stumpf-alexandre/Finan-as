@model financas.domain.GrupoDespesa
@{
    ViewBag.Title = "CreateGrupo";
}

<h2>Criar Grupo de Despesa</h2>

<form action="/Despesa/CreateGrupo" method="post">
    <div class="form-horizontal">
        <div class="form-group">
            <label>Id</label>
            <input class="form-control" 
                   type="hidden" 
                   name="Id" />
        </div>

        <div class="form-group">
            <label>Grupo de Despesa</label>
            <input class="form-control" 
                   type="text" 
                   name="nomeGrupo" />
        </div>

        <div class="form-group">
            <input type="submit" 
                   name="btnSave" 
                   value="Salvar"
                   class="btn btn-primary" />
        </div>
    </div>
</form>
@model IEnumerable<financas.domain.Despesa>
@{
    ViewBag.Title = "CreateGrupo";
}

<h2>Lista do Grupo de Despesa</h2>

<table class="table">
    <thead>
        <tr>
            <th>Id</th>
            <th>Grupo de Despesa</th>
        </tr>
    </thead>
    <tbody>
        @foreach (var item in Model)
        {
            <tr>
                <td>@item.Id</td>
                <td>@item.GrupoDespesa.nomeGrupo</td>
                <td><a class="btn btn-danger" href="Despesa/Delete/@item.Id">Deletar</a> </td>
                <td><a class="btn btn-primary" href="Despesa/Edit/@item.Id">Editar</a> </td>
            </tr>
        }
        <tr></tr>
    </tbody>
</table>